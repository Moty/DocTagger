# DocTagger Configuration Example

# Folder paths
INBOX_FOLDER=/path/to/inbox
ARCHIVE_FOLDER=/path/to/archive
TEMP_FOLDER=/tmp/doctagger

# Ollama settings
OLLAMA__URL=http://localhost:11434
OLLAMA__MODEL=llama2
OLLAMA__TIMEOUT=60
OLLAMA__TEMPERATURE=0.1

# OCR settings
OCR__ENABLED=true
OCR__LANGUAGE=eng
OCR__SKIP_IF_EXISTS=true
OCR__DESKEW=true
OCR__FORCE_OCR=false

# Tagging settings
TAGS__MAX_TAGS=10
TAGS__MIN_CONFIDENCE=0.5

# macOS Finder tags (optional)
MACOS_TAGS__ENABLED=false
MACOS_TAGS__COLOR_MAPPING=true

# Archive structure template
# Available variables: {year}, {month}, {day}, {document_type}
ARCHIVE_STRUCTURE={year}/{month}/{document_type}

# Sidecar JSON files
SIDECAR_ENABLED=true

# Server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging
LOG_LEVEL=INFO
